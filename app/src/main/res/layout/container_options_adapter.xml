<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="30dp"
	android:background="@drawable/bg_card_radius"
	android:padding="3dp"
	android:orientation="vertical">

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/rvRvOptions"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tvAdd"
		style="@style/WorkSans_Regular20"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:text="@string/plus_add"
		android:textAlignment="center"
		android:textColor="@color/verdeclaroq"
		android:textStyle="bold"
		app:layout_constraintTop_toBottomOf="@+id/rvOptions" />

</androidx.appcompat.widget.LinearLayoutCompat>