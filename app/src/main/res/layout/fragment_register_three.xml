<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <ScrollView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginEnd="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="32dp"
                    android:textSize="18sp"
                    android:textColor="@color/verdeq"
                    android:text="Paso 3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="center"
                    android:layout_marginEnd="27dp"
                    android:layout_marginStart="27dp"
                    android:textSize="18sp"
                    android:textColor="@color/verdeclaroq"
                    android:text="confirma tus datos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="140dp"
                            app:cardElevation="12dp">

                            <ImageView
                                android:id="@+id/imgPet"
                                android:src="@color/verdeclaroq"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtImgLetterUser"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="62sp"
                        android:textStyle="bold"
                        android:textColor="@color/verdepastelq"
                        android:text="M"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </RelativeLayout>

                <TextView
                    android:id="@+id/txtNameUser"
                    android:gravity="center"
                    android:layout_marginEnd="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="8dp"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdepastelq"
                    android:text="Julia Alvarez"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:gravity="center"
                    android:layout_marginEnd="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="8dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/verdeq"
                    android:text="Tus mascotas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center_horizontal"
                            app:cardCornerRadius="140dp"
                            app:cardElevation="12dp">

                            <ImageView
                                android:id="@+id/imgMascota"
                                android:src="@color/verdeclaroq"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                />

                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtImgLetter"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:textSize="62sp"
                        android:textStyle="bold"
                        android:textColor="@color/verdepastelq"
                        android:text="M"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


                </RelativeLayout>


                <TextView
                    android:id="@+id/txtNameMascota"
                    android:gravity="center"
                    android:layout_marginEnd="27dp"
                    android:layout_marginStart="27dp"
                    android:layout_marginTop="8dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/plomoRegular"
                    android:text="Gato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    app:cardCornerRadius="140dp"
                    app:cardElevation="12dp">

                    <LinearLayout
                        android:weightSum="100"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            app:tint="@color/verdeq"
                            android:src="@drawable/baseline_add_24"
                            android:layout_width="22dp"
                            android:layout_height="22dp"/>

                        <TextView
                            android:text="Agregar\nmascota"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/verdeq"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>



                </androidx.cardview.widget.CardView>

                <!-- borrar -->

                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    android:id="@+id/edtPeso"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="22dp"

                    android:hint="¿Cuánto pesa (kg)?">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:textSize="14sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_weight="20"
                    android:text="¿Qué sexo es?"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:visibility="gone"
                    android:background="@drawable/border_linearlayout"
                    android:layout_marginStart="22dp"
                    android:layout_marginEnd="22dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <RadioGroup
                        android:weightSum="100"
                        android:orientation="horizontal"
                        android:layout_above="@+id/view_below"
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <RadioButton
                            android:layout_weight="50"
                            android:id="@+id/radio_button_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Macho"
                            />

                        <RadioButton
                            android:layout_weight="50"
                            android:id="@+id/radio_button_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Hembra"
                            />

                    </RadioGroup>
                </LinearLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="22dp"

                    android:hint="¿Cuándo nació?">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtFecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="date"
                        android:textSize="14sp"
                        android:typeface="normal" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:visibility="gone"
                    android:id="@+id/edtCompartir"
                    android:text="Compartir con otro familiar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="22dp"
                    />

                <!-- -->

            </LinearLayout>

        </ScrollView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>